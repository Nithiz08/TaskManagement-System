@model TaskManager.Models.TaskItem

@{
    ViewData["Title"] = "Delete Task";
}

<div class="row">
    <div class="col-md-8">
        <div class="alert alert-danger">
            <h4>Are you sure you want to delete this task?</h4>
            <p>This action cannot be undone.</p>
        </div>

        <div class="card">
            <div class="card-header">
                <h3>@Model.Title</h3>
            </div>
            <div class="card-body">
                <div class="row mb-2">
                    <div class="col-sm-3"><strong>Description:</strong></div>
                    <div class="col-sm-9">@(Model.Description ?? "No description")</div>
                </div>

                <div class="row mb-2">
                    <div class="col-sm-3"><strong>Assigned To:</strong></div>
                    <div class="col-sm-9">@Model.User.FullName</div>
                </div>

                <div class="row mb-2">
                    <div class="col-sm-3"><strong>Priority:</strong></div>
                    <div class="col-sm-9">@Model.Priority</div>
                </div>

                <div class="row mb-2">
                    <div class="col-sm-3"><strong>Due Date:</strong></div>
                    <div class="col-sm-9">@(Model.DueDate?.ToString("MMM dd, yyyy") ?? "No due date")</div>
                </div>
            </div>
        </div>

        <form asp-action="Delete" method="post" class="mt-3">
            <input asp-for="Id" type="hidden" />
            <button type="submit" class="btn btn-danger">Delete Task</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>