@model IEnumerable<TaskManager.Models.User>

@{
    ViewData["Title"] = "Users";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>All Users</h2>
    <a asp-action="Create" class="btn btn-success">Create New User</a>
</div>

<div class="row">
    @foreach (var user in Model)
    {
        <div class="col-md-6 col-lg-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@user.FullName</h5>
                    <p class="card-text">
                        <strong>Email:</strong> @user.Email<br>
                        <strong>Tasks:</strong> @user.Tasks.Count()<br>
                        <strong>Completed:</strong> @user.Tasks.Count(t => t.IsCompleted)<br>
                        <strong>Joined:</strong> @user.CreatedDate.ToString("MMM dd, yyyy")
                    </p>
                    <div class="btn-group" role="group">
                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>